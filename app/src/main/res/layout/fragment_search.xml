<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
    tools:context="com.example.thanhhang.mnsfimo.FragmentMain.SearchFragment">



        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/place"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"/>

            <EditText
                android:background="@drawable/selector_frame"
                android:hint="@string/place"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:id="@+id/search_address"/>


        </LinearLayout>


        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="PM 2.5"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/textView7" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/selector_frame"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/pm25"
                    android:prompt="@string/pm25"
                    android:id="@+id/choose_pm" />



            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/temperature"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/textView9" />

            <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                />

                <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar


                    android:id="@+id/temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/temperature_min"
                        android:text="0"
                        android:textColor="#419442"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:text="50"
                        android:textColor="#419442"
                        android:id="@+id/temperature_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                      />
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/humidity"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/textView2" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"


                    android:id="@+id/humidity"

                     />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:text="0"
                        android:textColor="#419442"
                        android:id="@+id/humidity_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:text="100"
                        android:textColor="#419442"
                        android:id="@+id/humidity_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/time1"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/textView8" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@drawable/selector_frame"
                android:layout_height="match_parent">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/time"
                    android:prompt="@string/time"
                    android:id="@+id/choose_time"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btx_reset"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="@string/cancel"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:background="@drawable/selector_list"/>

            <Button
                android:background="@drawable/selector_list"
                android:id="@+id/btx_timNangCao"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="@string/search"
                android:textSize="15sp"
                android:layout_weight="1"/>


        </LinearLayout>
    </LinearLayout>

