<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_introduce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thanhhang.mnsfimo.Activities.IntroduceActivity">

    <android.support.design.widget.TabLayout
        android:background="#34b438"
        android:layout_alignParentTop="true"
        android:id="@+id/tab2_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabSelectedTextColor="#ef1f1f"
        app:tabTextColor="#fff"
        >

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/tab2_layout"
        android:id="@+id/view_pager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>
